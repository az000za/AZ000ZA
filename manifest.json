{
  "manifest_version": 3,
  "name": "Your Extension Name",
  "version": "1.0",
  "permissions": [
    "storage", // Permission for using the Storage API
    "unlimitedStorage" // Permission for unlimited storage in chrome.storage
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  // ... other extension configurations
}
